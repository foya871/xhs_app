		{
			"name": "Default",
			"request": "launch",
			"type": "dart",
			"program": "lib/main.dart"
		},
		{
			"name": "Default-Profile",
			"request": "launch",
			"type": "dart",
			"flutterMode": "profile",
			"program": "lib/main.dart"
		},
		{
			"name": "Default-Release",
			"request": "launch",
			"type": "dart",
			"flutterMode": "release",
			"program": "lib/main.dart"
		},
		{
			"name": "Android-Sim",
			"request": "launch",
			"type": "dart",
			"program": "lib/main.dart",
			// "args": ["-d", "Android SDK"]
			"args": ["-d", "sdk gphone"]
		},
		{
			"name": "iPhone",
			"request": "launch",
			"type": "dart",
			"program": "lib/main.dart",
			"args": ["-d", "iPhone"]
		},
		{
			"name": "Chrome",
			"request": "launch",
			"type": "dart",
			"program": "lib/main.dart",
			"args": [
				"-d",
				"chrome",
				"--web-browser-flag",
				"--disable-web-security",
				"--dart-define-from-file=.web_proxy.json"
			],
			"preLaunchTask": "Launch Web Proxy"
		}
	]
